<section class="hero is-link is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
            <%# app/assets/images/kasurira_logo.jpg %>
            <%= image_tag "kasurira_logo.jpg", alt: "Kasurira logo" %>
          <% end %>

        </div>
        <div class="navbar-end">
          <%= link_to "新規登録", new_entry_path, class: "button is-success" %>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <% if content_for(:title) %>
          <%= yield :title %>
        <% else %>
          Inventory
        <% end %>
      </h1>
    </div>
  </div>
</section>