<div class="columns is-centered mt-6">
  <div class="column is-half">
    <% @entries.each do |day, entries| %>
      <h3 class="is-size-4 has-text-weight-bold mb-4 has-text-centered"><%= day %> に変動した製品</h3>

      <% entries.each do |entry| %>
        <%= link_to entry_path(entry) do %>
          <div class="card">
            <div class="card-content">
              <strong><%= entry.product %></strong><br/>
              タイプ：<%= entry.style %>,
              生地：<%= entry.material %>,
              製品コード：<%= entry.item_code %>,
              在庫数：<%= entry.stock %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>